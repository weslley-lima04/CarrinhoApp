<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelofeed"
    android:layout_width="165dp"
    android:layout_height="300dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/tituloItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Café Expresso"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tituloItem"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="#ccc" />


        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/nomeItemPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgItem"
            android:layout_alignStart="@+id/imgItem"
            android:layout_marginTop="10dp"
            android:text="Bom café"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/feedPreco"
            android:layout_alignTop="@id/nomeItemPedido"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addCart"
            android:layout_centerHorizontal="true"
            android:text="Comprar"
            android:layout_below="@id/nomeItemPedido"
            android:backgroundTint="#aba094"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/idProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@id/addCart"
            android:layout_margin="5dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>